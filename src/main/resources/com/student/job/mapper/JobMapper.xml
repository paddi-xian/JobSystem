<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.student.job.mapper.JobMapper">
    <insert id="addJob">
        insert into Job value(null,#{j_name},#{j_description},#{j_salary},#{j_hours},#{u_id})
    </insert>
    <select id="JobTotal" resultType="com.student.job.pojo.Job">
        select count(*)  from job where u_id = #{u_id}
    </select>

    <delete id="deleteJobByJID">
        delete from job where j_id = #{j_id}
    </delete>

    <select id="selectJobByUid" resultType="com.student.job.pojo.Job">
        select j_id,j_name,j_description,j_salary,j_hours,j_hours,u_id  from job where u_id = #{u_id}
    </select>

    <select id="selectAllJob" resultType="com.student.job.pojo.Job">
        select * from job
    </select>
</mapper>